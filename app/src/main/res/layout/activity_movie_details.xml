<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    tools:context=".MovieDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="298dp"
            android:foreground="@drawable/movie_image_gradient"
            android:scaleType="centerCrop"
            android:src="@drawable/avengers_movie"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideVerticalBegin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideVerticalEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp"/>

        <TextView
            android:id="@+id/back_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="@string/back_button"
            android:textColor="@color/back_button"
            android:textSize="@dimen/back_button"
            app:drawableStartCompat="@drawable/back"
            android:drawablePadding="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideVerticalEnd"
            app:layout_constraintStart_toEndOf="@+id/guideVerticalBegin"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/avengers_age_limits"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="222dp"
            android:text="@string/age_limits"
            android:textSize="@dimen/age_limits"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/age_limits"
            android:background="@drawable/rounded_square"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guideVerticalBegin"/>

        <TextView
            android:id="@+id/movie_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="254dp"
            android:text="@string/movie_name"
            android:textColor="@color/movie_name"
            android:textSize="@dimen/movie_name"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/guideVerticalBegin"
            app:layout_constraintEnd_toStartOf="@+id/guideVerticalEnd"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/avengers_genre"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:text="@string/genre"
            android:textColor="@color/genre"
            android:textSize="@dimen/genre"
            app:layout_constraintStart_toStartOf="@id/guideVerticalBegin"
            app:layout_constraintEnd_toEndOf="@id/guideVerticalEnd"
            app:layout_constraintTop_toBottomOf="@id/movie_name"
            app:layout_constraintBottom_toTopOf="@id/barrierHorizontalGenreTop" />


        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierHorizontalGenreTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="avengers_genre"
            />

        <ImageView
            android:id="@+id/avengers_star_1"
            style="@style/RatingRedStar"
            android:layout_marginEnd="2dp"
            app:layout_constraintStart_toStartOf="@id/guideVerticalBegin"
            app:layout_constraintEnd_toStartOf="@+id/avengers_star_2"
            app:layout_constraintTop_toTopOf="@id/barrierHorizontalGenreTop"
            app:layout_constraintBottom_toBottomOf="@id/barrierHorizontalRatingTop"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/avengers_star_2"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            style="@style/RatingRedStar"
            app:layout_constraintStart_toEndOf="@+id/avengers_star_1"
            app:layout_constraintEnd_toStartOf="@id/avengers_star_3"
            app:layout_constraintTop_toTopOf="@id/barrierHorizontalGenreTop"
            app:layout_constraintBottom_toBottomOf="@id/barrierHorizontalRatingTop"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/avengers_star_3"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            style="@style/RatingRedStar"
            app:layout_constraintStart_toEndOf="@id/avengers_star_2"
            app:layout_constraintEnd_toStartOf="@id/avengers_star_4"
            app:layout_constraintTop_toTopOf="@id/barrierHorizontalGenreTop"
            app:layout_constraintBottom_toBottomOf="@id/barrierHorizontalRatingTop"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/avengers_star_4"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            style="@style/RatingRedStar"
            app:layout_constraintStart_toEndOf="@id/avengers_star_3"
            app:layout_constraintEnd_toStartOf="@id/avengers_star_5"
            app:layout_constraintTop_toTopOf="@id/barrierHorizontalGenreTop"
            app:layout_constraintBottom_toBottomOf="@id/barrierHorizontalRatingTop"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/avengers_star_5"
            android:layout_marginStart="2dp"
            style="@style/RatingGreyStar"
            app:layout_constraintStart_toEndOf="@id/avengers_star_4"
            app:layout_constraintEnd_toStartOf="@id/avengers_reviews"
            app:layout_constraintTop_toTopOf="@id/barrierHorizontalGenreTop"
            app:layout_constraintBottom_toBottomOf="@id/barrierHorizontalRatingTop"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/avengers_reviews"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/review_number"
            android:textSize="@dimen/reviews"
            android:textStyle="bold"
            android:textColor="@color/reviews"
            app:layout_constraintStart_toEndOf="@id/avengers_star_5"
            app:layout_constraintTop_toTopOf="@id/barrierHorizontalGenreTop"
            app:layout_constraintBottom_toBottomOf="@id/barrierHorizontalRatingTop"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierHorizontalRatingTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="avengers_reviews"/>

        <TextView
            android:id="@+id/story_line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/story_line"
            android:textSize="@dimen/story_line"
            android:textColor="@color/story_line"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/guideVerticalBegin"
            app:layout_constraintEnd_toEndOf="@id/guideVerticalEnd"
            app:layout_constraintTop_toTopOf="@id/barrierHorizontalRatingTop"
            app:layout_constraintBottom_toTopOf="@id/story_line_text"/>

        <TextView
            android:id="@+id/story_line_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/story_line_text"
            android:textSize="@dimen/story_line_text"
            android:textColor="@color/story_line_text"
            android:lineSpacingExtra="@dimen/storyline_line_height"
            app:layout_constraintStart_toStartOf="@id/guideVerticalBegin"
            app:layout_constraintEnd_toEndOf="@id/guideVerticalEnd"
            app:layout_constraintTop_toBottomOf="@id/story_line"
            app:layout_constraintBottom_toBottomOf="@id/barrierHorizontalStoryTop"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierHorizontalStoryTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="story_line_text" />

        <TextView
            android:id="@+id/cast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="7dp"
            android:text="@string/cast"
            android:textSize="@dimen/cast"
            android:textColor="@color/cast"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/guideVerticalBegin"
            app:layout_constraintEnd_toEndOf="@id/guideVerticalEnd"
            app:layout_constraintTop_toBottomOf="@id/barrierHorizontalStoryTop"
            app:layout_constraintBottom_toTopOf="@id/barrierHorizontalCastTop"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierHorizontalCastTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="cast" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cast_person_1"
            style="@style/CardView.CastPerson"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toEndOf="@id/guideVerticalBegin"
            app:layout_constraintEnd_toStartOf="@id/cast_person_2"
            app:layout_constraintTop_toBottomOf="@id/barrierHorizontalCastTop"
            app:layout_constraintBottom_toTopOf="@id/cast_person_name_1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/robert"
                tools:srcCompat="@tools:sample/avatars"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/cast_person_name_1"
            style="@style/CastPersonName"
            android:text="@string/cast_person_name_1"
            app:layout_constraintStart_toStartOf="@id/cast_person_1"
            app:layout_constraintEnd_toEndOf="@id/cast_person_1"
            app:layout_constraintTop_toBottomOf="@id/cast_person_1"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cast_person_2"
            style="@style/CardView.CastPerson"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@id/cast_person_3"
            app:layout_constraintStart_toEndOf="@id/cast_person_1"
            app:layout_constraintTop_toBottomOf="@id/barrierHorizontalCastTop"
            app:layout_constraintBottom_toTopOf="@id/cast_person_name_2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/chris"
                tools:srcCompat="@tools:sample/avatars"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/cast_person_name_2"
            style="@style/CastPersonName"
            android:text="@string/cast_person_name_2"
            app:layout_constraintStart_toStartOf="@id/cast_person_2"
            app:layout_constraintEnd_toEndOf="@id/cast_person_2"
            app:layout_constraintTop_toBottomOf="@id/cast_person_2"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cast_person_3"
            style="@style/CardView.CastPerson"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toEndOf="@id/cast_person_2"
            app:layout_constraintEnd_toStartOf="@id/cast_person_4"
            app:layout_constraintTop_toBottomOf="@id/barrierHorizontalCastTop"
            app:layout_constraintBottom_toTopOf="@id/cast_person_name_3">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mark"
                tools:srcCompat="@tools:sample/avatars"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/cast_person_name_3"
            style="@style/CastPersonName"
            android:text="@string/cast_person_name_3"
            app:layout_constraintStart_toStartOf="@id/cast_person_3"
            app:layout_constraintEnd_toEndOf="@id/cast_person_3"
            app:layout_constraintTop_toBottomOf="@id/cast_person_3"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cast_person_4"
            style="@style/CardView.CastPerson"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/cast_person_3"
            app:layout_constraintEnd_toStartOf="@id/guideVerticalEnd"
            app:layout_constraintTop_toBottomOf="@id/barrierHorizontalCastTop"
            app:layout_constraintBottom_toTopOf="@id/cast_person_name_4">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/chris2"
                tools:srcCompat="@tools:sample/avatars"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/cast_person_name_4"
            style="@style/CastPersonName"
            android:text="@string/cast_person_name_4"
            app:layout_constraintStart_toStartOf="@id/cast_person_4"
            app:layout_constraintEnd_toEndOf="@id/cast_person_4"
            app:layout_constraintTop_toBottomOf="@id/cast_person_4"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
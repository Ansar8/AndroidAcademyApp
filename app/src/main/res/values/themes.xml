<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidAcademyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/main_dark_theme</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Star">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
    </style>
    
    <style name="RatingRedStar" parent="@style/Star">
        <item name="android:src">@drawable/red_star</item>
    </style>
    
    <style name="RatingGreyStar" parent="@style/Star">
        <item name="android:src">@drawable/grey_star</item>
    </style>
    
    <style name="ActorName">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#D8D8D8</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/main_dark_theme</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabTextColor">#6D6D80</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorColor">#FF3466</item>
        <item name="tabRippleColor">#FF3466</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
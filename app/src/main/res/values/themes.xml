<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidAcademyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Star">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
    </style>
    
    <style name="RatingRedStar" parent="@style/Star">
        <item name="android:src">@drawable/red_star</item>
    </style>
    
    <style name="RatingGreyStar" parent="@style/Star">
        <item name="android:src">@drawable/grey_star</item>
    </style>
    
    <style name="CastPersonName">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#D8D8D8</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="CardView.CastPerson">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="cardCornerRadius">@dimen/cast_image_corner_radius</item>
    </style>
</resources>
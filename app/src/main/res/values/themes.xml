<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidAcademyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Star">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
    </style>
    <style name="RatingRedStar" parent="@style/Star">
        <item name="android:src">@drawable/red_star_icon</item>
    </style>
    <style name="RatingGreyStar" parent="@style/Star">
        <item name="android:src">@drawable/grey_star_icon</item>
    </style>
</resources>